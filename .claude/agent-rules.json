{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "PPM Project - Agents Auto-Activation Configuration",
  "version": "1.0.0",
  "lastUpdated": "2025-11-27",

  "agents": {
    "architect": {
      "type": "planning",
      "enforcement": "require",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "plan",
          "planowanie",
          "architektura",
          "architecture",
          "strategia",
          "strategy",
          "ETAP",
          "milestone",
          "dependencies",
          "zaleznosci",
          "projekt",
          "project plan",
          "roadmap",
          "design",
          "struktura",
          "hierarchy"
        ],
        "intentPatterns": [
          "(plan|zaplanuj).*?(feature|funkcje|etap|milestone)",
          "(create|stworz|design).*?(architecture|architektur)",
          "(update|aktualizuj).*?(plan|projekt|ETAP)",
          "jak.*?(zaimplementowac|podejsc|rozplanowac)",
          "(dependencies|zaleznosci).*?(miedzy|between)",
          "strategia.*?(implementacji|development)",
          "roadmap.*?(projektu|feature)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "Plan_Projektu/**/*.md",
          "CLAUDE.md"
        ],
        "contentPatterns": [
          "ETAP_",
          "milestone",
          "dependencies"
        ]
      },
      "description": "Expert Planning Manager - Project planning, architecture decisions, milestone tracking, Plan_Projektu/ management"
    },

    "ask": {
      "type": "knowledge",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "co to jest",
          "what is",
          "wyjasnij",
          "explain",
          "jak dziala",
          "how does",
          "dlaczego",
          "why",
          "opisz",
          "describe",
          "roznica miedzy",
          "difference between",
          "kiedy uzywac",
          "when to use"
        ],
        "intentPatterns": [
          "(co|what).*?(to jest|is)",
          "(wyjasnij|explain).*?(koncept|concept|jak|how)",
          "(jak|how).*?(dziala|works)",
          "(dlaczego|why).*?(uzywa|use|potrzebuje|need)",
          "roznica.*?(miedzy|between)",
          "(kiedy|when).*?(uzywac|use|stosowac|apply)"
        ]
      },
      "description": "Knowledge Expert - Technical questions, code explanations, concept clarifications"
    },

    "debugger": {
      "type": "diagnostic",
      "enforcement": "require",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "blad",
          "error",
          "bug",
          "debug",
          "fix",
          "napraw",
          "nie dziala",
          "not working",
          "problem",
          "exception",
          "wyjatek",
          "crash",
          "fail",
          "failure",
          "issue",
          "broken"
        ],
        "intentPatterns": [
          "(blad|error|bug).*?(w|in|przy)",
          "(nie dziala|not working|broken)",
          "(napraw|fix|resolve).*?(problem|issue|error|bug)",
          "(debug|diagnose|investigate).*?(problem|issue)",
          "exception.*?(thrown|occurred|wystapiL)",
          "(crash|fail|failure).*?(when|podczas|przy)",
          "(znajdz|find).*?(przyczyne|cause|root cause)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "storage/logs/*.log",
          "_ISSUES_FIXES/**/*.md"
        ],
        "contentPatterns": [
          "Exception",
          "Error",
          "Stack trace",
          "SQLSTATE"
        ]
      },
      "description": "Expert Debugger - Error fixing, bug investigation, systematic diagnostics, root cause analysis"
    },

    "coding-style-agent": {
      "type": "quality",
      "enforcement": "require",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "standardy",
          "standards",
          "clean code",
          "best practice",
          "code quality",
          "jakosc kodu",
          "linting",
          "review",
          "sprawdz kod",
          "code review",
          "convention",
          "konwencja"
        ],
        "intentPatterns": [
          "(sprawdz|check|review).*?(kod|code|quality)",
          "(standardy|standards|convention).*?(kodowania|coding)",
          "clean.*?code",
          "best.*?practice",
          "(popraw|improve|fix).*?(styl|style|format)",
          "(lint|analyze).*?(kod|code)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/**/*.php",
          "resources/views/**/*.blade.php"
        ],
        "contentPatterns": [
          "// TODO",
          "// FIXME",
          "// HACK"
        ]
      },
      "description": "Code Quality Guardian - Code standards, best practices, Context7 integration, quality enforcement"
    },

    "documentation-reader": {
      "type": "compliance",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "dokumentacja",
          "documentation",
          "CLAUDE.md",
          "przeczytaj",
          "read",
          "sprawdz w docs",
          "check docs",
          "zgodnosc",
          "compliance",
          "zasady",
          "rules",
          "wytyczne",
          "guidelines"
        ],
        "intentPatterns": [
          "(przeczytaj|read).*?(dokumentacje|documentation|docs)",
          "(sprawdz|check).*?(CLAUDE|docs|dokumentacje)",
          "(zgodnosc|compliance).*?(z|with).*?(dokumentacja|docs)",
          "(zasady|rules|wytyczne|guidelines).*?(projektu|project)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "CLAUDE.md",
          "_DOCS/**/*.md",
          "Plan_Projektu/**/*.md"
        ]
      },
      "description": "Documentation Compliance Expert - Reading and enforcing project documentation compliance"
    },

    "deployment-specialist": {
      "type": "operations",
      "enforcement": "require",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "deploy",
          "wdroz",
          "deployment",
          "SSH",
          "Hostido",
          "produkcja",
          "production",
          "pscp",
          "plink",
          "upload",
          "server",
          "serwer",
          "cache clear",
          "artisan",
          "migrate"
        ],
        "intentPatterns": [
          "(deploy|wdroz|upload).*?(na|to|produkcje|production)",
          "(SSH|Hostido).*?(connection|polaczenie|deploy)",
          "(pscp|plink).*?(upload|transfer)",
          "(clear|wyczysc).*?(cache|view|config)",
          "(run|uruchom).*?(artisan|migrate|seed)",
          "(server|serwer).*?(config|konfiguracja)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "_TOOLS/**/*.ps1",
          ".env*"
        ],
        "contentPatterns": [
          "pscp",
          "plink",
          "Hostido",
          "php artisan"
        ]
      },
      "description": "Deployment & Infrastructure Expert - SSH deployment, Hostido, PowerShell, CI/CD pipelines"
    },

    "laravel-expert": {
      "type": "domain",
      "enforcement": "require",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "Laravel",
          "Eloquent",
          "migration",
          "migracja",
          "controller",
          "kontroler",
          "service",
          "serwis",
          "middleware",
          "model",
          "route",
          "trasa",
          "validation",
          "walidacja",
          "policy",
          "artisan"
        ],
        "intentPatterns": [
          "(create|stworz|add|dodaj).*?(controller|kontroler|service|serwis|model|migration|migracja)",
          "(Laravel|Eloquent).*?(pattern|wzorzec|relationship|relacja)",
          "(route|trasa).*?(definition|definicja|middleware)",
          "(validation|walidacja).*?(rules|reguly|request)",
          "(policy|authorization|autoryzacja)",
          "artisan.*?(command|komenda|make)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/Http/Controllers/**/*.php",
          "app/Services/**/*.php",
          "app/Models/**/*.php",
          "database/migrations/*.php",
          "routes/*.php"
        ],
        "contentPatterns": [
          "namespace App\\\\",
          "use Illuminate\\\\",
          "extends Controller",
          "extends Model",
          "Schema::"
        ]
      },
      "description": "Laravel Framework Expert - Laravel 12.x patterns, Eloquent ORM, enterprise architecture"
    },

    "livewire-specialist": {
      "type": "domain",
      "enforcement": "require",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "Livewire",
          "livewire",
          "wire:",
          "component",
          "komponent",
          "wire:model",
          "wire:click",
          "wire:submit",
          "wire:poll",
          "wire:loading",
          "dispatch",
          "emit",
          "reactive",
          "computed"
        ],
        "intentPatterns": [
          "(create|stworz|add|dodaj).*?(livewire|component|komponent)",
          "wire:(model|click|submit|poll|loading|key)",
          "(Livewire|livewire).*?(component|issue|problem|error)",
          "(dispatch|emit).*?(event|zdarzenie)",
          "(reactive|computed).*?(property|wlasciwosc)",
          "wire:snapshot",
          "component.*?(lifecycle|state|stan)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/Http/Livewire/**/*.php",
          "app/Livewire/**/*.php",
          "resources/views/livewire/**/*.blade.php"
        ],
        "contentPatterns": [
          "extends Component",
          "use Livewire\\\\Component",
          "wire:model",
          "wire:click",
          "#\\[Computed\\]",
          "$this->dispatch"
        ]
      },
      "description": "Livewire 3.x Expert - Components, wire: directives, state management, event handling"
    },

    "prestashop-api-expert": {
      "type": "integration",
      "enforcement": "require",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "PrestaShop",
          "prestashop",
          "sklep",
          "shop",
          "sync",
          "synchronizacja",
          "API",
          "webservice",
          "product sync",
          "category sync",
          "multi-store",
          "ps8",
          "ps9"
        ],
        "intentPatterns": [
          "(PrestaShop|prestashop).*?(API|integration|integracja)",
          "(sync|synchronizuj).*?(product|produkt|category|kategorie)",
          "(sklep|shop).*?(connection|polaczenie|data|dane)",
          "(webservice|api).*?(prestashop|ps8|ps9)",
          "(multi-store|multi-shop).*?(sync|data)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/Services/PrestaShop/**/*.php",
          "app/Models/PrestaShopShop.php",
          "app/Models/ProductShopData.php"
        ],
        "contentPatterns": [
          "PrestaShopClient",
          "PrestaShopService",
          "ProductTransformer",
          "CategoryTransformer"
        ]
      },
      "description": "PrestaShop API Integration Expert - PS 8.x/9.x integration, product sync, multi-store management"
    },

    "erp-integration-expert": {
      "type": "integration",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "ERP",
          "BaseLinker",
          "Subiekt",
          "Subiekt GT",
          "Dynamics",
          "Microsoft Dynamics",
          "integracja",
          "integration",
          "magazyn",
          "warehouse",
          "stock",
          "inventory"
        ],
        "intentPatterns": [
          "(ERP|BaseLinker|Subiekt|Dynamics).*?(integration|integracja)",
          "(sync|synchronizuj).*?(ERP|magazyn|warehouse|stock)",
          "(connect|polacz).*?(BaseLinker|Subiekt|Dynamics)",
          "(import|export).*?(ERP|inventory|stan magazynowy)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/Services/ERP/**/*.php",
          "config/erp.php"
        ],
        "contentPatterns": [
          "BaseLinker",
          "SubiektGT",
          "Dynamics",
          "ERPService"
        ]
      },
      "description": "ERP Integration Expert - BaseLinker, Subiekt GT, Microsoft Dynamics integrations"
    },

    "import-export-specialist": {
      "type": "data",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "import",
          "export",
          "XLSX",
          "Excel",
          "CSV",
          "mapowanie",
          "mapping",
          "kolumny",
          "columns",
          "transformacja",
          "transformation",
          "plik",
          "file",
          "dane",
          "data"
        ],
        "intentPatterns": [
          "(import|export).*?(XLSX|Excel|CSV|plik|file)",
          "(mapowanie|mapping).*?(kolumn|columns|data|dane)",
          "(read|czytaj|parse).*?(XLSX|Excel|CSV)",
          "(transformacja|transformation).*?(data|dane)",
          "column.*?(mapping|mapowanie)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/Imports/**/*.php",
          "app/Exports/**/*.php"
        ],
        "contentPatterns": [
          "Maatwebsite\\\\Excel",
          "ToCollection",
          "FromCollection",
          "WithHeadingRow"
        ]
      },
      "description": "Import/Export Data Specialist - XLSX processing, column mapping, data transformation"
    },

    "frontend-specialist": {
      "type": "ui",
      "enforcement": "require",
      "priority": "critical",
      "promptTriggers": {
        "keywords": [
          "CSS",
          "frontend",
          "UI",
          "UX",
          "Blade",
          "Alpine",
          "style",
          "styl",
          "layout",
          "design",
          "button",
          "przycisk",
          "form",
          "formularz",
          "modal",
          "responsive"
        ],
        "intentPatterns": [
          "(CSS|style|styl).*?(change|zmiana|fix|napraw)",
          "(UI|UX|frontend).*?(improvement|poprawa|design)",
          "(Blade|Alpine).*?(component|komponent|template)",
          "(layout|design).*?(change|zmiana|create|stworz)",
          "(button|przycisk|form|formularz|modal).*?(style|styl|add|dodaj)",
          "responsive.*?(design|layout)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "resources/views/**/*.blade.php",
          "resources/css/**/*.css",
          "resources/js/**/*.js",
          "tailwind.config.js"
        ],
        "contentPatterns": [
          "@apply",
          "x-data",
          "x-show",
          "class=\"",
          "var(--"
        ]
      },
      "criticalRules": [
        "ZAKAZ: Inline styles (style=\"...\")",
        "ZAKAZ: Hardcoded colors",
        "WYMAGANE: CSS classes in dedicated files",
        "WYMAGANE: Screenshot verification after UI changes"
      ],
      "description": "Frontend UI/UX Expert - Blade templates, Alpine.js, responsive design, enterprise UX patterns"
    },

    "refactoring-specialist": {
      "type": "quality",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "refaktoryzacja",
          "refactoring",
          "optymalizacja",
          "optimization",
          "podziel",
          "split",
          "rozbij",
          "break up",
          "modularyzacja",
          "modularization",
          "separation",
          "separacja",
          "extract",
          "wyodrebnij"
        ],
        "intentPatterns": [
          "(refaktoryzacja|refactoring).*?(kod|code|komponent|component)",
          "(podziel|split|rozbij|break).*?(plik|file|klase|class|funkcje|function)",
          "(modularyzacja|modularization).*?(kod|code)",
          "(extract|wyodrebnij).*?(metode|method|klase|class|serwis|service)",
          "(optymalizacja|optimization).*?(kod|code|performance|wydajnosc)",
          "separation.*?concerns"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/**/*.php"
        ],
        "contentPatterns": [
          "// TODO: refactor",
          "// REFACTOR",
          "class.*{[\\s\\S]{10000,}"
        ]
      },
      "description": "Code Refactoring Expert - Refactoring, separation of concerns, CLAUDE.md compliance (max 300 lines per file)"
    }
  },

  "globalRules": {
    "fileSize": {
      "standard": 300,
      "exceptional": 500,
      "description": "Maximum lines per file (standard: 300, exceptional: 500)"
    },
    "agentReporting": {
      "mandatory": true,
      "location": "_AGENT_REPORTS/",
      "description": "All agents MUST create reports in _AGENT_REPORTS/"
    },
    "context7Integration": {
      "mandatory": true,
      "description": "All domain agents MUST use Context7 MCP before implementation"
    }
  },

  "enforcementLevels": {
    "suggest": {
      "description": "Non-blocking suggestion, Claude can proceed without using agent",
      "action": "Show gentle reminder"
    },
    "require": {
      "description": "Strong recommendation, Claude should use agent",
      "action": "Show prominent reminder with justification if skipped"
    }
  },

  "priorityLevels": {
    "low": "Optional agent, nice-to-have",
    "medium": "Important agent, recommended for quality",
    "high": "Critical agent, essential for consistency",
    "critical": "Mandatory agent, project requirements depend on it"
  }
}
