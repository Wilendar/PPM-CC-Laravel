# ============================================
# MINIMAL .gitignore - Private Repository
# Only ESSENTIAL technical ignores
# Documentation & project files ARE TRACKED for Claude Code CLI @ mentions
# ============================================

# Laravel Dependencies (MUST ignore - too large)
/vendor/
/node_modules/

# Environment Secrets (MUST ignore - security)
/.env
/.env.*

# Build Artifacts (MUST ignore - generated files)
/public/build/
/public/hot
/public/storage
/bootstrap/cache/*.php

# Runtime Data (MUST ignore - application generated)
/storage/app/containers/
/storage/app/products/images/
/storage/app/imports/
/storage/app/exports/
/storage/logs/*.log
/storage/*.key

# IDE & OS (personal preferences)
/.idea/
/.vscode/
.DS_Store
*.swp
*.swo

# Testing (generated files)
/tests/coverage/
/.phpunit.cache
/.phpunit.result.cache

# ============================================
# NOTE: Following ARE TRACKED in git (for Claude Code CLI):
# ✅ CLAUDE.md, AGENTS.md - project instructions
# ✅ .claude/ - agent system configuration
# ✅ Plan_Projektu/ - ETAP tracking
# ✅ _DOCS/ - project documentation (including credentials for private repo)
# ✅ _ISSUES_FIXES/ - knowledge base
# ✅ _TOOLS/ - development scripts
# ✅ _AGENT_REPORTS/ - agent work reports
# ✅ References/ - UI mockups
# ============================================
